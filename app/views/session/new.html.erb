<div class="login_container form__container">
<h1>Login</h1>
  <div class="login">
    
  <%= form_for :session,class:'form', url:login_path do |f| %>
    <%= f.label :username ,class:'form__control label' %>
    <%= f.text_field :username,placeholder:'Your username',autofocus:true,required:true,class:'form__control  form__field' %>

    <%= f.label :password,class:'form__control label' %>
    <%= f.password_field :password ,placeholder:'Your passowrd',required:true,class:'form__control  form__field' %>

    <%= f.submit 'Login' ,class:'btn submit'%>

  <% end %>
  </div>
</div>
